@model Marketplace.WebApp.Models.OfferDetailsVM
@*@CommentModel IEnumerable<Marketplace.WebApp.Models.CommentVM>*@

<div>
    <h4>Oferta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID oferty
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfferId)
        </dd>
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfferName)
        </dd>
        <dt class="col-sm-2">
            Cena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfferPrice)
        </dd>
        <dt class="col-sm-2">
            Aktywna?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfferActive)
        </dd>
        <dt class="col-sm-2">
            Data utworzenia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>
</div>

 
<div class="card">
    <div class="card-header">Dane kontaktowe</div>
    <div class="body" style="background-color: #ebebeb">
        <dl class="row">
            <dt class="col-sm-2">
                Imię
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Nazwisko
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Surname)
            </dd>
            @{
                if (Model.contactVM != null)
                {
                    <dt class="col-sm-2">
                        Państwo
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(m => m.contactVM.Country)
                    </dd>
                    <dt class="col-sm-2">
                        Województwo
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(m => m.contactVM.County)
                    </dd>
                    <dt class="col-sm-2">
                        Miasto
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(m => m.contactVM.City)
                    </dd>
                    <dt class="col-sm-2">
                        Nr. telefonu
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(m => m.contactVM.Phone)
                    </dd>
                }
            }
        </dl>
    </div>
</div>
<br />

<div>
    <a asp-action="Index">Wróc do listy</a>
</div>
