@model Marketplace.WebApp.Models.OfferProductsVM

<div>
    <h4>Wybierz i dodaj produkt do oferty:</h4>
    <h3>
        @Html.DisplayFor(model => model.OfferName)
    </h3>
    <form asp-action="AddProduct">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            @Html.DropDownListFor( model => model.SelectedProduct,new SelectList(Model.getProduct, "Value", "Text"), "Wybierz produkt", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Yours" asp-controller="Offers">Wróć do listy</a>
</div>


